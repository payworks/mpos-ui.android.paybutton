<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/mpu_activity_vertical_margin"
        android:paddingLeft="@dimen/mpu_activity_horizontal_margin"
        android:paddingRight="@dimen/mpu_activity_horizontal_margin"
        android:paddingTop="@dimen/mpu_activity_vertical_margin">

        <TextView
            android:id="@+id/sdk_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mpu_activity_vertical_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="SDK version:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_mock"
            android:textColor="#707070"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/transaction_signature"
            style="@style/MPUButtonStyle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_signature_required"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/transaction_application_selection"
            style="@style/MPUButtonStyle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_application_selection"/>

        <Button
            android:id="@+id/transaction_declined"
            style="@style/MPUButtonStyle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_transaction_declined"/>

        <Button
            android:id="@+id/transaction_ask_for_tip"
            style="@style/MPUButtonStyle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_ask_for_tip"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/header_test"
            android:textColor="#707070"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/transaction_miura_charge"
            style="@style/MPUButtonStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_miura"/>

        <Button
            android:id="@+id/transaction_miura_preauthorize"
            style="@style/MPUButtonStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_miura_preauthorize"/>

        <Button
            android:id="@+id/transaction_miura_charge_with_tip"
            style="@style/MPUButtonStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_miura_with_tip"/>

        <Button
            android:id="@+id/transaction_e105_charge"
            style="@style/MPUButtonStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_e105"/>

        <Button
            android:id="@+id/read_card"
            style="@style/MPUButtonStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_read_card"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/header_init"
            android:textColor="#707070"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/init_with_provider"
            style="@style/MPUButtonStyle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/init_with_provider"/>

        <Button
            android:id="@+id/init_with_concardis"
            style="@style/MPUButtonStyle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/init_with_concardis"/>

        <Button
            android:id="@+id/init_with_mcashier"
            style="@style/MPUButtonStyle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/init_with_mcashier"/>

        <Button
            android:id="@+id/init_with_secure_retail"
            style="@style/MPUButtonStyle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/init_with_secure_retail"/>

        <Button
            android:id="@+id/init_with_yourbrand"
            style="@style/MPUButtonStyle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/init_with_yourbrand"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/header_acquirer"
            android:textColor="#707070"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/show_login"
            style="@style/MPUButtonStyle4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"/>

        <Button
            android:id="@+id/show_settings"
            style="@style/MPUButtonStyle4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"/>

        <Button
            android:id="@+id/logout"
            style="@style/MPUButtonStyle4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/header_last_transaction"
            android:textColor="#707070"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/summary_last"
            style="@style/MPUButtonStyle5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_last_summary"/>

        <Button
            android:id="@+id/refund_last"
            style="@style/MPUButtonStyle5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_last_refund"/>

        <Button
            android:id="@+id/capture_last"
            style="@style/MPUButtonStyle5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_last_capture"/>

        <Button
            android:id="@+id/print_last"
            style="@style/MPUButtonStyle5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option_last_print"/>

    </LinearLayout>
</ScrollView>
