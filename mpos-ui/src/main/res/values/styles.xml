<resources>

    <style name="MpuTransactionStatusIconView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">60sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MpuTransactionStatusTextView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lines">2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">@dimen/mpu_activity_vertical_margin_half</item>
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/mpu_login_button_tint</item>
    </style>
</resources>