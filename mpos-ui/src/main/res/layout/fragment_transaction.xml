<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_gravity="center">

    <FrameLayout
        android:id="@+id/status_icon_view_container"
        android:layout_marginTop="@dimen/payment_status_icon_view_margin_top"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/payment_status_icon_container"
        android:layout_height="@dimen/payment_status_icon_container">

        <ImageView
            android:src="@drawable/transaction_progress_drawable"
            android:id="@+id/progress_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />

        <TextView
            style="@style/TransactionStatusIconView"
            android:id="@+id/status_icon_view"
            android:layout_gravity="center"
            />
     </FrameLayout>

    <TextView
        style="@style/TransactionStatusTextView"
        android:id="@+id/status_view"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/status_icon_view_container"
    />

    <Button
        style="@style/mPOS.UI.Button"
        android:id="@+id/abort_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MPUAbort"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
    />

</RelativeLayout>
