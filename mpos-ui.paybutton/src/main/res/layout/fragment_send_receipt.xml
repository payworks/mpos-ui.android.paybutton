<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_gravity="center">


    <FrameLayout
        android:id="@+id/status_icon_view_container"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/payment_status_icon_container"
        android:layout_height="@dimen/payment_status_icon_container">

        <ImageView
            android:src="@drawable/payment_progress_drawable"
            android:id="@+id/progress_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />

        <TextView
            style="@style/PaymentStatusIconView"
            android:id="@+id/status_icon_view"
            android:layout_gravity="center"
            />
     </FrameLayout>

    <EditText
        android:padding="@dimen/dialog_content_padding"
        android:layout_marginLeft="@dimen/dialog_content_padding"
        android:layout_marginRight="@dimen/dialog_content_padding"
        android:id="@+id/email_address_view"
        android:inputType="textEmailAddress"
        android:hint="@string/enter_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/send_button"
        android:layout_below="@id/status_icon_view_container"/>

    <Button
        style="@style/mPOS.UI.NegativeButton"
        android:id="@id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:layout_alignParentRight="true"
        android:layout_below="@id/status_icon_view_container"/>

</RelativeLayout>
